void print_char32( char32_t *string )
{
  mbstate_t state;
  char buf[ MB_LEN_MAX + 1 ];
  while( *string )
  {
  	memset( buf, 0, MB_LEN_MAX + 1 );
    c32rtomb( buf, *string, &state );
    ++string;
    printf( buf );
  }
}

